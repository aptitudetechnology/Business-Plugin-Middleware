# Environment configuration for BigCapital
# Generated from .env.example with fixes for New Relic and MongoDB

# =============================================================================
# SECURITY SETTINGS - CHANGE THESE IN PRODUCTION!
# =============================================================================

# JWT Secret for token signing (minimum 32 characters)
JWT_SECRET=change-me-please-jwt-secret-make-it-long-and-random-for-production

# Session secret for web sessions
SESSION_SECRET=another-long-random-secret-for-sessions-min-32-chars

# =============================================================================
# DATABASE PASSWORDS - CHANGE THESE IN PRODUCTION!
# =============================================================================

# MariaDB/MySQL passwords
MYSQL_ROOT_PASSWORD=bigcapital_root_password_change_me
MYSQL_PASSWORD=bigcapital_secure_password

# MongoDB passwords
MONGO_ROOT_PASSWORD=bigcapital_mongo_password

# Redis password
REDIS_PASSWORD=bigcapital_redis_password

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application URL (change to your domain in production)
APP_URL=http://simple.local:3000

# Application name
APP_NAME=BigCapital

# Node environment
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MariaDB settings
DB_HOST=bigcapital-mariadb
DB_PORT=3306
DB_NAME=bigcapital
DB_USER=bigcapital
DB_PASSWORD=bigcapital_secure_password

# MongoDB settings - Fixed connection string format
MONGODB_URI=mongodb://bigcapital:bigcapital_mongo_password@bigcapital-mongo:27017/bigcapital

# Redis settings
REDIS_HOST=bigcapital-redis
REDIS_PORT=6379
REDIS_PASSWORD=bigcapital_redis_password

# =============================================================================
# NEW RELIC CONFIGURATION - Fixed to disable or set app name
# =============================================================================

# Disable New Relic for self-hosted setup (set to false)
NEW_RELIC_ENABLED=false
# If you want to enable New Relic, uncomment and set these:
# NEW_RELIC_APP_NAME=BigCapital-SelfHosted
# NEW_RELIC_LICENSE_KEY=your-license-key-here

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP settings for email notifications
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME=BigCapital

# =============================================================================
# FILE STORAGE
# =============================================================================

# Storage driver (local, s3, etc.)
STORAGE_DRIVER=local
STORAGE_LOCAL_PATH=/app/storage

# =============================================================================
# API SETTINGS
# =============================================================================

# API rate limiting
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Password hashing rounds
BCRYPT_ROUNDS=12

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis memory limit
REDIS_MAXMEMORY=256mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode (set to false in production)
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *
