# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=False
FLASK_ENV=production

# Database Configuration (if using PostgreSQL)
# POSTGRES_DB=middleware
# POSTGRES_USER=middleware
# POSTGRES_PASSWORD=middleware_password

# Plugin Configuration
PLUGINS_ENABLED=True
PLUGINS_AUTO_DISCOVER=True

# BigCapital Plugin Configuration
BIGCAPITAL_API_KEY=your-bigcapital-api-key
BIGCAPITAL_BASE_URL=https://api.bigcapital.ly

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract

# Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_FOLDER=uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/middleware.log

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# External Service Configuration
# Add your external service API keys and URLs here
INVOICE_NINJA_API_KEY=your-invoice-ninja-api-key
INVOICE_NINJA_BASE_URL=https://your-instance.invoicing.co

# Paperless-NGX Configuration
# Get your API token from Paperless-NGX Settings > API Tokens
PAPERLESS_NGX_API_KEY=your-paperless-api-key
# Base URL of your Paperless-NGX instance (no trailing slash)
PAPERLESS_NGX_BASE_URL=https://your-paperless-instance.com
# Request timeout in seconds (optional)
PAPERLESS_NGX_TIMEOUT=30
# Enable/disable the plugin (optional)
PAPERLESS_NGX_ENABLED=true
